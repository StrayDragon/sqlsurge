{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"problemMatcher": "$esbuild-watch",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"showReuseMessage": false,
				"clear": true
			},
			"group": "build"
		}
	]
}
